html
  head
    title Login Page
    // Made with love by Mutiullah Samim
    // Bootsrap 4 CDN
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css', integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO', crossorigin='anonymous')
    // Fontawesome CDN
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.3.1/css/all.css', integrity='sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU', crossorigin='anonymous')
    // Custom styles
    link(rel='stylesheet', type='text/css', href='stylesheets/styles.css')
  body
    .container
      .d-flex.justify-content-center.h-100
        .card
          .card-header
            h3 Sign In
            | &#x9;&#x9;&#x9;&#x9;
            .d-flex.justify-content-end.social_icon
              span
                i.fab.fa-facebook-square
              | &#x9;&#x9;&#x9;&#x9;&#x9;
              span
                i.fab.fa-google-plus-square
              | &#x9;&#x9;&#x9;&#x9;&#x9;
              span
                i.fab.fa-twitter-square
          | &#x9;&#x9;&#x9;
          .card-body
            form(action="/login" method="POST")
              .input-group.form-group
                .input-group-prepend
                  span.input-group-text
                    i.fas.fa-user
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                input.form-control(type='text', placeholder='username',name="username")
              | &#x9;&#x9;&#x9;&#x9;&#x9;
              .input-group.form-group
                .input-group-prepend
                  span.input-group-text
                    i.fas.fa-key
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                input.form-control(type='password', placeholder='password', name="password")
              | &#x9;&#x9;&#x9;&#x9;&#x9;
              .row.align-items-center.remember
                input(type='checkbox')
                | Remember Me
              | &#x9;&#x9;&#x9;&#x9;&#x9;
              .form-group
                input.btn.float-right.login_btn(type='submit', value='Login')
          | &#x9;&#x9;&#x9;
          